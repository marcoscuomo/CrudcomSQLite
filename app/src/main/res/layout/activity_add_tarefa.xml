<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AddTarefaActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/adicionar_tarefa"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addTarefa_edtNomeTarefa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/nome_tarefa"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/white"
        android:theme="@style/MyEditTextTheme"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/addTarefa_edtDescricaoTarefa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/descricao_tarefa"
        android:inputType="textMultiLine"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:theme="@style/MyEditTextTheme"
        app:layout_constraintEnd_toEndOf="@+id/addTarefa_edtNomeTarefa"
        app:layout_constraintStart_toStartOf="@+id/addTarefa_edtNomeTarefa"
        app:layout_constraintTop_toBottomOf="@+id/addTarefa_edtNomeTarefa" />

    <Button
        android:id="@+id/addTarefa_btnAcao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_btn"
        android:text="@string/btn_adicionar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/addTarefa_edtDescricaoTarefa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addTarefa_edtDescricaoTarefa"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStatus" />

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTarefa_edtDescricaoTarefa" />

</android.support.constraint.ConstraintLayout>